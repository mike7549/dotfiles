win_reboot () {
	sudo efibootmgr -n 0000
	reboot
}

update_all () {
	yay -Syu --answerdiff All --answerclean All --answeredit All --devel
	omz update
	flatpak update -y
	sudo nvim -u ~/dotfiles/config/vim/init.vim -c :PlugUpgrade -c :PlugUpdate -c :q -c :q
}

pip_env () {
	pipenv install --python=3.8 -r requirements.txt --skip-lock
	pipenv shell
}
